@model AtomicSeller.ViewModels.JobLogVMs

@using AtomicSeller.Helpers.Razor

@{
    ViewBag.Title = "JobsLog";
    ViewBag.ShowH2 = false;
    ViewBag.PageCol = HtmlConsts.Dimens.DefaultPageCol;
    ViewBag.PageColOffset = HtmlConsts.Dimens.DefaultPageColOffset;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                JOB NAME
            </th>
            <th>
                JOBLOG DATE START
            </th>
            <th>
                JOBLOG DATE END
            </th>
            <th>
                TENANT ID
            </th>
            <th>
                JOB ID
            </th>
            <th>
                JOB STATUS
            </th>
            <th>
                LOG ID
            </th>
            <th style="display:none;">
                JOBLOG ERROR MESSAGE
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Atomicjoblogs)
        {
    <tr>
        <td data-attr="name" data-value="@item.JobName">
            @item.JobName
        </td>
        <td data-attr="start" data-value="@item.DateStart">
            @item.DateStart
        </td>
        <td data-attr="end" data-value="@item.DateEnd">
            @item.DateEnd
        </td>
        <td data-attr="tenantid" data-value="@item.TenantId">
            @item.TenantId
        </td>
        <td data-attr="jobid" data-value="@item.JobId">
            @item.JobId
        </td>
        <td data-attr="returncode" data-value="@item.ReturnCode">
            @item.ReturnCode
        </td>
        <td data-attr="logid" data-value="@item.LogId">
            @item.LogId
        </td>
        <td style="display:none;" data-attr="Error_Msg" data-value="@item.ErrorMessage"></td>
        <td>
            <a href="@Url.Action("JobLogEdit", "Jobs", new { LogId = item.LogId })"
               class="btn btn-primary"
               data-toggle="tooltip"
               title="JobEdit">
                <i class="mdi mdi-account-circle"></i>
            </a>
        </td>
    </tr>
        }

    </table>
</body>
</html>
